<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.bytecode.use_reflection_optimizer">false</property>
		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="hibernate.connection.password">pv2014</property>
		<property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/pv2014</property>
		<property name="hibernate.connection.username">juan</property>
		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
		<property name="hibernate.search.autoregister_listeners">false</property>
		<mapping resource="ar/edu/unju/fi/hibernate/mapping/Usuario.hbm.xml" />
		<mapping resource="ar/edu/unju/fi/hibernate/mapping/DetallePedido.hbm.xml" />
		<mapping resource="ar/edu/unju/fi/hibernate/mapping/Producto.hbm.xml" />
		<mapping resource="ar/edu/unju/fi/hibernate/mapping/Pedido.hbm.xml" />
		<mapping resource="ar/edu/unju/fi/hibernate/mapping/Rol.hbm.xml" />
	</session-factory>
</hibernate-configuration>
